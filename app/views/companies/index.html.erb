<h2>メニュー</h2>
<ul>
  <li><%= link_to '新規企業登録', new_company_path %></li>
  <li><%= link_to '会社情報検索', search_companies_path %></li>
</ul>

<br>
<h2>企業一覧</h2>
<div class="table-responsive-sm">
<table class="table table-bordered table-sm">
  <thead class="thead-light">
    <tr>
      <th scope="col"><%= sort_link(@q, :id, "企業コード") %></th>
      <th scope="col"><%= sort_link(@q, :name) %></th>
      <th scope="col"><%= sort_link(@q, :phone_number) %></th>
      <th scope="col"><%= sort_link(@q, :address) %></th>
      <th scope="col"><%= sort_link(@q, :industry) %></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td scope="row"><%= link_to format("%010d",company.id),company %></td>
        <td><%= company.name %></td>
        <td><%= company.phone_number %></td>
        <td><%= company.address %></td>
        <td><%= company.industry %></td>

        <td><%= link_to '編集', edit_company_path(company) %></td>
        <td><%= link_to '削除', company, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= paginate @companies %>
