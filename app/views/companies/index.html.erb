<p id="notice"><%= notice %></p>

<h5>メニュー</h5>
<ul>
  <li><%= link_to '新規企業登録', new_company_path %></li>
</ul>
<br>
<table>
  <thead>
    <tr>
      <th>企業名</th>
      <th>TEL</th>
      <th>住所</th>
      <th>業種</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.phone_number %></td>
        <td><%= company.address %></td>
        <td><%= company.industry %></td>
        <td><%= link_to '詳細', company %></td>
        <td><%= link_to '編集', edit_company_path(company) %></td>
        <td><%= link_to '削除', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
