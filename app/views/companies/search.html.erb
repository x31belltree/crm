<h2>検索フォーム</h2>
<%= search_form_for @q,url:search_companies_path do |f| %>

  <div class="field">
    <%= f.label :name %></br>
    <%= f.search_field :name_cont %>
  </div>
  
  <div class="field">
    <%= f.label :phone_number %></br>
    <%= f.search_field :phone_number_cont %>
  </div>
  <div class="field">
    <%= f.label :address %></br>
    <%= f.search_field :address_cont %>
  </div>
  
  <div class="field">
    <%= f.label :industry %></br>
    <%= f.search_field :industry_cont %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<br/>
<h2>検索結果</h2>
<table class="table table-bordered table-sm">
  <thead class="thead-light">
    <tr>
      <th scope="col">企業コード</th>
      <th scope="col">企業名</th>
      <th scope="col">TEL</th>
      <th scope="col">住所</th>
      <th scope="col">業種</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td scope="row"><%= link_to format("%010d",company.id),company %></td>
        <td><%= company.name %></td>
        <td><%= company.phone_number %></td>
        <td><%= company.address %></td>
        <td><%= company.industry %></td>

        <td><%= link_to '編集', edit_company_path(company) %></td>
        <td><%= link_to '削除', company, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>