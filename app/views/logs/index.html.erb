<p id="notice"><%= notice %></p>

<h1>ログ一覧</h1>

<table>
  <thead>
    <tr>
      <th>次回アプローチ日</th>
      <th>ステータス</th>
      <th>コメント</th>
    </tr>
  </thead>

  <tbody>
    <% @matter.logs.each do |log| %>
      <tr>
        <td><%= log.next_approach_date %></td>
        <td><%= log.status %></td>
        <td><%= log.comment %></td>
        <td><%= log.matter %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'ログを追加', new_company_matter_log_path %>
